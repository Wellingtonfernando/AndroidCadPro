<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wellingtonfernando.cadprod">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.google.zxing.client.android.SCAN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="Controle de Estoque">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ActivityProduto"
            android:label="Cadastro de Produtos" />
        <activity
            android:name=".activities.ActivityListarProduto"
            android:label="Lista de Produtos" />
        <activity android:name=".activities.ActivityEditarProduto"
                  android:label="Editar Produto"/>
        <activity android:name=".activities.Activity_ajuda"
                  android:label="Ajuda"/>
        <activity android:name=".activities.ActivityContato"
                  android:label="Informações para contato"></activity>
    </application>

</manifest>