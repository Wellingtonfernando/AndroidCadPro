<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.Activity_ajuda">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Para acessar a tela de cadastro de produtos:\n
       .Clique em 'CADASTRAR PRODUTO'\n
       .Insira as informações do produto\n
       .Clique no botão para confirmar o cadastro"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="left"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/retaclebackgroundgrey"
                android:padding="10dp"
                android:src="@drawable/ic_add_circle_outline_black_24dp" />

            <Button
                android:id="@+id/btnSalvarProduto"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@android:color/transparent"/>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Na tela de cadastro para acessar a leitura de codigo de barra:\n
       .Clique no botão\n
       .Aponte para o codigo de barras"></TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clipToPadding="false"
        android:gravity="center"
        android:orientation="horizontal">
    <android.support.v7.widget.CardView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:layout_margin="10dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:gravity="center"
        android:background="@drawable/retaclebackgroundpink"
        android:padding="10dp"
        android:src="@drawable/ic_fullscreen_black_24dp" />
    </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>